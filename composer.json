{
    "name": "ventasfix/laravel-project",
    "description": "Sistema de backâ€‘office y API para VentasFix construido con Laravel.",
    "type": "project",
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0",
        "laravel/sanctum": "^3.0",
        "guzzlehttp/guzzle": "^7.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/"
        },
        "classmap": [
            "database/seeders"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    ,
    "template:publish": "php artisan template:publish"
    },
    "require-dev": {
        "phpunit/phpunit": "9.6",
        "mockery/mockery": "^1.6",
        "fakerphp/faker": "^1.24"
    }
}
